<game>
	<tabs>
		<tab index="0">
			<title>Small Business</title>
			<buttons>
				<!-- Paper Branch -->
				<button>
					<title>Buy Paper</title>
					<click>-1 Player, -5 Money</click>
					<reset>1 Player, 20 Paper</reset>
					<cooldown>5</cooldown>
					<hideafter>1 Fluff, 1 Fabric</hideafter>
					<tooltip>Pick up some more paper for making gift cards.</tooltip>
				</button>
				<button>
					<title>Make a greeting card</title>
					<click>-1 Paper, -1 Player</click>
					<reset>1 Player, 1 Card</reset>
					<cooldown>2</cooldown>
					<hideuntil>1 Paper</hideuntil>
					<hideafter>1 Bindery</hideafter>
					<tooltip>Make a cute penguin-themed greeting card out of paper.</tooltip>
				</button>
				<button>
					<title>Make a book</title>
					<click>-10 Paper, -1 Player</click>
					<reset>1 Player, 1 Book</reset>
					<cooldown>3</cooldown>
					<hideuntil>1 Bindery</hideuntil>
					<tooltip>Make a book about how great penguins are.</tooltip>
				</button>
				<button>
					<title>Sell a greeting card</title>
					<click>-1 Player, -1 Card, -1 Cart</click>
					<reset>1 Player, 2 Money, 1 Cart, (Bindery) Leftovers</reset>
					<cooldown>3</cooldown>
					<hideuntil>5 Cards</hideuntil>
					<hideafter>1000000 Leftovers</hideafter>
					<tooltip>Man your cart and sell a greeting card on the streets.</tooltip>
				</button>
				<button>
					<title>Sell a book</title>
					<click>-1 Player, -1 Cart, -1 Book</click>
					<reset>1 Player, 1 Cart, 15 Money</reset>
					<cooldown>3</cooldown>
					<hideuntil>1 Book</hideuntil>
					<tooltip>Man your cart and sell a book on the streets.</tooltip>
				</button>
				<button>
					<title>Buy a book bindery</title>
					<click>-1 Player, -500 Money</click>
					<reset message="You now make books instead of greeting cards!">1 Player, 1 Bindery, clamp(1000000 - Cards, 0, 1000000) Leftovers</reset>
					<cooldown>10</cooldown>
					<hideuntil all="true">2 Real Carts,1 Paper</hideuntil>
					<hideafter>1 Bindery</hideafter>
					<tooltip>Shift your business to making books instead of greeting cards.</tooltip>
				</button>
				
				<!-- Fabric Branch -->
				<button>
					<title>Buy Fabric</title>
					<click>-1 Player, -20 Money</click>
					<reset>1 Player, 10 Fabric</reset>
					<cooldown>5</cooldown>
					<hideafter>1 Paper</hideafter>
					<tooltip>Combine this with some fluff and you could sew something cute!</tooltip>
				</button>
				<button>
					<title>Buy Fluff</title>
					<click>-1 Player, -10 Money</click>
					<reset>1 Player, 10 Fluff</reset>
					<cooldown>5</cooldown>
					<hideafter>1 Paper, 1 Sweatshop</hideafter>
					<tooltip>Combine this with some fabric and you could sew something cute!</tooltip>
				</button>
				<button>
					<title>Make a Penguin Plushie</title>
					<click>-1 Player, -1 Fluff, -2 Fabric</click>
					<reset>1 Player, 1 Plushie</reset>
					<cooldown>5</cooldown>
					<hideuntil>1 Fluff, 1 Fabric</hideuntil>
					<hideafter>1000000 Leftovers</hideafter>
					<tooltip>Sew a penguin plushie using some fabric and fluff.</tooltip>
				</button>
				<button>
					<title>Make a Penguin Shirt</title>
					<click>-1 Player, -5 Fabric</click>
					<reset>1 Player, 1 Shirt</reset>
					<cooldown>3</cooldown>
					<hideuntil>1 Sweatshop</hideuntil>
					<tooltip>Sew a cute penguin-themed shirt using some fabric.</tooltip>
				</button>
				<button>
					<title>Sell a Penguin Plushie</title>
					<click>-1 Player, -1 Cart, -1 Plushie</click>
					<reset>15 Money, 1 Player, 1 Cart, (Sweatshop) Leftovers</reset>
					<cooldown>3</cooldown>
					<hideuntil>3 Plushies</hideuntil>
					<hideafter>1000000 Leftovers</hideafter>
					<tooltip>Man your cart and sell a plushie on the streets.</tooltip>
				</button>
				<button>
					<title>Sell a Penguin Shirt</title>
					<click>-1 Player, -1 Cart, -1 Shirt</click>
					<reset>1 Player, 1 Cart, 25 Money</reset>
					<cooldown>3</cooldown>
					<hideuntil>1 Shirt</hideuntil>
					<tooltip>Man your cart and sell a t-shirt on the streets.</tooltip>
				</button>
				<button>
					<title>Buy a Clothing Factory</title>
					<click>-1 Player, -1200 Money</click>
					<reset message="You now make penguin-themed shirts instead of plushies!">1 Player, 1 Sweatshop, clamp(1000000 - (Plushies + Fluff), 0, 1000000) Leftovers</reset>
					<cooldown>10</cooldown>
					<hideuntil all="true">2 Real Carts, 1 Fabric</hideuntil>
					<hideafter>1 Sweatshop</hideafter>
					<tooltip>Shift your business to making shirts instead of plushies.</tooltip>
				</button>
				
				<!-- All Branches -->
				<button>
					<title>Hire an employee</title>
					<click>-1 Player, -100 Money</click>
					<reset message="You now have someone else to do some of the heavy lifting! Drag them onto a task to get them started.">1 Player, 1 Crew</reset>
					<cooldown>5</cooldown>
					<hideuntil>50 Money</hideuntil>
					<tooltip>Hire an employee to help you out.</tooltip>
					<hideafter>20 Crew</hideafter>
				</button>
				<button>
					<title>Buy another cart</title>
					<click>-1 Player, -400 Money</click>
					<reset message="You now have another cart. You can sell more things at the same time.">1 Player, 1 Cart, 1 Real Cart</reset>
					<cooldown>7</cooldown>
					<hideuntil>2 Crew</hideuntil>
					<hideafter>5 Real Carts</hideafter>
					<tooltip>Buy another cart. You'll need this to have more than 1 employee selling things!</tooltip>
				</button>
			</buttons>
		</tab>
		<tab index="1">
			<title>Zoo</title>
			<buttons>
				<button>
					<title>Coming soon!</title>
					<click>-1 Player</click>
					<reset>1 Player</reset>
					<cooldown>10</cooldown>
					<hideuntil>1 Bindery, 1 Sweatshop</hideuntil>
					<tooltip>This does nothing yet, but stayed tuned!</tooltip>
				</button>
			</buttons>
		</tab>
	</tabs>
	
	<resources>
		<resource value="30">Money</resource>
		<resource min="1">Paper</resource>
		<resource min="1">Card,Cards</resource>
		<resource min="1">Book, Books</resource>
		<resource min="-1">Bindery, Binderies</resource>
		<resource min="-1">Leftovers</resource>
		<resource min="1">Fabric</resource>
		<resource min="1">Fluff</resource>
		<resource min="1">Plushie, Plushies</resource>
		<resource min="1">Shirt, Shirts</resource>
		<resource min="-1">Sweatshop, Sweatshops</resource>
		<resource value="1">Cart,Carts</resource>
		<resource min = "-1" value="1">Real Cart, Real Carts</resource>
		<resource min="-1" value="1">Player,Players</resource>
		<resource min="2">Crew</resource>
	</resources>
	
	<settings>
		<default_text_size>18.0</default_text_size>
		<default_text_color>255, 255, 255, 255</default_text_color>
		<default_button_text_color>0, 0, 0, 255</default_button_text_color>
		<default_button_color>255, 255, 255, 255</default_button_color>
		<default_button_outline_color>0, 0, 0, 255</default_button_outline_color>
		<default_disabled_text_color>183, 183, 183, 255</default_disabled_text_color>
		<default_cooldown_overlay_color>0, 0, 0, 200</default_cooldown_overlay_color>
		<default_cooldown_worker_overlay_color>0, 0, 0, 100</default_cooldown_worker_overlay_color>
		<background_color>90,90,160</background_color>
		<worker_sprite_path>worker.png</worker_sprite_path>
		<debugging>false</debugging>
		<time_multiplier>2.0</time_multiplier>
		<window_width>800.0</window_width>
		<window_height>600.0</window_height>
		<autosave_time>30</autosave_time>
		<mq_width>200.0</mq_width>
		<mq_text_size>14.0</mq_text_size>
		<mq_lifetime>15</mq_lifetime>
		<display_cost_in_tooltip>true</display_cost_in_tooltip>
	</settings>
</game>